<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="conexao" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>        
        	<properties>
	            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
	            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost/dbtaok" />
	            <property name="javax.persistence.jdbc.user" value="postgres" />
	            <property name="javax.persistence.jdbc.password" value="Inline@2016" />
	
	    		<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
<!-- 	    		<property name="hibernate.hbm2ddl.auto" value="update" /> -->

	            <property name="hibernate.show_sql" value="true" />
	            <property name="hibernate.format_sql" value="true" />
			</properties>
    </persistence-unit>
</persistence>